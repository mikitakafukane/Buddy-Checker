<div class="container">
  <div class="col-md-4 offset-md-2 my-5">
    <span class="px-4">グループ作成</span>
  </div>

  <div class="col-md-6 mx-auto my-5">

      <%= form_with model: @group, url: groups_path, method: :post, local: true do |f| %>

        <div class="row mb-3">
          <%= f.label :name, "グループ名", class: "col-md-4" %>
          <%= f.text_field :name, class: 'form-control col-md-8', placeholder: "グループ名" %>
        </div>

        <div class="row my-5">
          <div class="col-5 offset-3 text-center"><%= f.submit class: 'btn btn-success' %></div>
        </div>

      <% end %>

  </div>
</div>